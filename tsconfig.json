{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "strict": true,
        "outDir": "build",
        "lib": ["es6", "es7", "dom"],
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "*": ["./types/*"]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
        
        
    },
    "exclude": ["build", "node_modules"]
}
